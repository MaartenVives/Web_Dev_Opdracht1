<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - opdracht_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f4f4f4;
        }

        .login-container {
            width: 300px;
            margin: auto;
            margin-top: 100px;
        }

        h2 {
            color: #4CAF50;
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
            text-align: center;
        }

        label {
            display: block;
        }

        input[type="text"],
        input[type="password"],
        input[type="number"],
        button[type="submit"],
        select {
            width: 100%;
            margin-bottom: 10px;
            padding: 8px;
            box-sizing: border-box;
        }

        .btn-primary {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 10px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 5px;
            width: 100%;
            box-sizing: border-box;
        }

        a {
            color: #4CAF50;
            text-decoration: none;
        }

        .ticket-table {
            width: 50%;
            margin: auto;
            border-collapse: collapse;
        }

        .ticket-table th, .ticket-table td {
            padding: 8px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .ticket-table th {
            background-color: #f2f2f2;
        }

        .ticket-table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Bestaande Tickets</h2>
    <table class="ticket-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th> <!-- Nieuwe kolom voor de acties -->
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                    <tr>
                        <td>@ticket.Name</td>
                        <td>@ticket.Price</td>
                        <td>
                            <form method="post" action="@Url.Action("RemoveTicket", "Tickets")">
                                <input type="hidden" name="Name" value="@ticket.Name" />
                                <button type="submit" class="btn btn-primary">Verwijderen</button>
                            </form>
                        </td>
                    </tr>
            }
        </tbody>
    </table>

    <h2>Voeg Nieuw Ticket Toe</h2>
    <form method="post">
        <div class="form-group">
            <label for="name">Ticket Naam:</label>
            <input type="text" id="name" name="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label for="price">Ticket Prijs:</label>
            <input type="text" id="price" name="Price" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Ticket Toevoegen</button>
    </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>