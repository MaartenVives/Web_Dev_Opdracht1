<html lang="nl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dierenpark Het Pandatje</title>
</head>
<style>
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

header {
    text-align: center;
    padding: 20px 0;
}

header img {
    max-width: 100%;
    height: auto;
}

main {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
}

.introductie {
    margin-bottom: 30px;
}

.introductie h2 {
    color: #4CAF50;
    text-align: center;
}

.introductie p {
    text-align: justify;
}

.introductie img {
    display: block;
    margin: 0 auto;
    max-width: 100%;
    height: auto;
}

.wat-te-doen ul {
    list-style-type: none;
    padding: 0;
}

.wat-te-doen li {
    margin-bottom: 10px;
}

.hoogtepunten ul {
    list-style-type: none;
    padding: 0;
}

.hoogtepunten li {
    margin-bottom: 10px;
}

.plan-uw-bezoek ul {
    list-style-type: none;
    padding: 0;
}

.plan-uw-bezoek li {
    margin-bottom: 10px;
}

.plan-uw-bezoek a {
    display: inline-block;
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
}

